<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/tool_bar"
        android:id="@+id/toolBar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="15dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="Agregar Producto"
        android:layout_marginVertical="25dp"
        android:textColor="#000000"
        android:textSize="34sp" />

    <TableLayout
        android:layout_width="match_parent"
        android:stretchColumns="*"
        android:background="@color/white"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/etAddName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:background="#C4C4C4"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PresentaciÃ³n:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/etAddPresentation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c4c4c4"
                android:ems="10"
                android:inputType="textPersonName" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Contenido:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/etAddContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c4c4c4"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio de compra:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/etAddPriceBuy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c4c4c4"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio de venta:"
                android:textColor="#000000"
                android:textSize="16sp"
                android:typeface="normal" />

            <EditText
                android:id="@+id/etAddPriceSell"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c4c4c4"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UID:"
                android:textColor="#000000"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAddUid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c4c4c4"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cantidad disponible:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAddStock"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#c4c4c4"
                android:ems="10"
                android:inputType="number" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Imagen:"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/imgAdd"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:cropToPadding="false"
                android:background="#c4c4c4" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_marginVertical="5dp"
            android:gravity="center"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnAddSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Guardar" />
        </TableRow>
    </TableLayout>


    </LinearLayout>
</LinearLayout>